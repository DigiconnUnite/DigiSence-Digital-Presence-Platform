generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid()) @map("_id")
  email     String   @unique
  name      String?
  password  String
  role      UserRole @default(BUSINESS_ADMIN)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  business  Business?
  professional Professional?
  inquiries Inquiry[]
  professionalInquiries ProfessionalInquiry[]
  assignedBusinessListingInquiries BusinessListingInquiry[]
  passwordResets PasswordReset[]

  @@map("users")
}

model Business {
   id          String   @id @default(cuid()) @map("_id")
   name        String
   slug        String   @unique
   description String?
   about       String?  // About section content
   logo        String?
   address     String?
   phone       String?
   email       String?
   website     String?
   facebook    String?
   twitter     String?
   instagram   String?
   linkedin    String?
   catalogPdf  String?  // Catalog PDF URL
   openingHours Json?   // Opening hours data
   gstNumber   String?  // GST number
   isActive    Boolean  @default(true)
   createdAt   DateTime @default(now())
   updatedAt   DateTime @updatedAt

   // Relations
   adminId     String   @unique
   admin       User     @relation(fields: [adminId], references: [id], onDelete: Cascade)
   categoryId  String?
   category    Category? @relation("BusinessCategory", fields: [categoryId], references: [id], onDelete: SetNull, onUpdate: NoAction)
   categories  Category[] @relation("BusinessProductCategories")
   products    Product[]
   inquiries   Inquiry[]

   // Content sections (stored as JSON for flexibility)
   heroContent Json?      // Hero slider data
   brandContent Json?     // Brand slider data
   portfolioContent Json? // Portfolio images data

   // Indexes for performance
   @@index([isActive])
   @@index([categoryId])
   @@index([createdAt])
   @@map("businesses")
}

model Professional {
   id                    String   @id @default(cuid()) @map("_id")
   name                  String
   slug                  String   @unique
   professionName        String?  // Profession name (e.g., Software Engineer, Doctor)
   professionalHeadline String?
   aboutMe               String?  // About me section
   profilePicture        String?
   banner                String?
   resume                String?  // Resume PDF URL
   location              String?
   phone                 String?
   email                 String?
   website               String?
   facebook              String?
   twitter               String?
   instagram             String?
   linkedin              String?
   isActive              Boolean  @default(true)
   createdAt             DateTime @default(now())
   updatedAt             DateTime @updatedAt

   // Relations
   adminId               String   @unique
   admin                 User     @relation(fields: [adminId], references: [id], onDelete: Cascade)
   inquiries             ProfessionalInquiry[]

   // Professional background (stored as JSON for flexibility)
   workExperience        Json?   // Work experience data
   education             Json?   // Education data
   skills                Json?   // Skills data
   servicesOffered       Json?   // Services offered data
   contactInfo           Json?   // Additional contact information
   portfolio             Json?   // Portfolio data
   contactDetails        Json?   // Contact details
   ctaButton             Json?   // Call-to-action button data

   // Indexes for performance
   @@index([isActive])
   @@index([professionName])
   @@index([createdAt])
   @@map("professionals")
}

model Category {
   id          String   @id @default(cuid()) @map("_id")
   name        String
   slug        String   @unique
   description String?
   parentId    String?
   type        CategoryType @default(PRODUCT)
   businessId  String?
   createdAt   DateTime @default(now())
   updatedAt   DateTime @updatedAt

   // Relations
   parent      Category? @relation("CategoryHierarchy", fields: [parentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
   children    Category[] @relation("CategoryHierarchy")
   business    Business? @relation("BusinessProductCategories", fields: [businessId], references: [id], onDelete: NoAction, onUpdate: NoAction)
   businesses  Business[] @relation("BusinessCategory")
   products    Product[]

   // Indexes for performance
   @@index([type])
   @@index([businessId])
   @@index([parentId])
   @@index([type, businessId])
   @@map("categories")
}

model Brand {
   id          String   @id @default(cuid()) @map("_id")
   name        String
   slug        String   @unique
   description String?
   logo        String?
   createdAt   DateTime @default(now())
   updatedAt   DateTime @updatedAt

   // Indexes for performance
   @@index([name])
   @@map("brands")
}

model Product {
   id          String   @id @default(cuid()) @map("_id")
   name        String
   description String?
   price       String?
   image       String?
   inStock     Boolean  @default(true)
   isActive    Boolean  @default(true)
   additionalInfo Json? // Key-value pairs for additional product information
   createdAt   DateTime @default(now())
   updatedAt   DateTime @updatedAt

   // Relations
   businessId  String
   business    Business @relation(fields: [businessId], references: [id], onDelete: Cascade, onUpdate: Cascade)
   categoryId  String?
   category    Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull, onUpdate: Cascade)
   brandName   String?
   inquiries   Inquiry[]

   // Indexes for performance
   @@index([businessId])
   @@index([businessId, isActive])
   @@index([categoryId])
   @@index([isActive])
   @@index([createdAt])
   @@index([brandName])
   @@map("products")
}

model Inquiry {
   id          String       @id @default(cuid()) @map("_id")
   name        String
   email       String
   phone       String?
   message     String
   status      InquiryStatus @default(NEW)
   createdAt   DateTime     @default(now())
   updatedAt   DateTime     @updatedAt

   // Relations
   businessId  String
   business    Business @relation(fields: [businessId], references: [id], onDelete: Cascade, onUpdate: Cascade)
   productId   String?
   product     Product? @relation(fields: [productId], references: [id], onDelete: SetNull, onUpdate: Cascade)
   userId      String?
   user        User?     @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)

   // Indexes for performance
   @@index([businessId])
   @@index([status])
   @@index([createdAt])
   @@map("inquiries")
}

model ProfessionalInquiry {
   id            String             @id @default(cuid()) @map("_id")
   name          String
   email         String
   phone         String?
   message       String
   status        InquiryStatus      @default(NEW)
   createdAt     DateTime           @default(now())
   updatedAt     DateTime           @updatedAt

   // Relations
   professionalId String
   professional   Professional @relation(fields: [professionalId], references: [id], onDelete: Cascade, onUpdate: Cascade)
   serviceId      String?
   userId         String?
   user           User? @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)

   // Indexes for performance
   @@index([professionalId])
   @@index([status])
   @@index([createdAt])
   @@map("professional_inquiries")
}

enum UserRole {
  SUPER_ADMIN
  BUSINESS_ADMIN
  PROFESSIONAL_ADMIN
}

enum InquiryStatus {
  NEW
  READ
  REPLIED
  CLOSED
}

model BusinessListingInquiry {
   id                  String                  @id @default(cuid()) @map("_id")
   businessName        String
   businessDescription String?
   contactName         String
   email               String
   phone               String?
   requirements        String
   inquiryType         String?
   status              BusinessListingStatus   @default(PENDING)
   assignedTo          String?
   assignedUser        User?                   @relation(fields: [assignedTo], references: [id], onDelete: SetNull)
   notes               String?
   createdAt           DateTime                @default(now())
   updatedAt           DateTime                @updatedAt

   // Indexes for performance
   @@index([status])
   @@index([assignedTo])
   @@index([createdAt])
   @@map("business_listing_inquiries")
}

enum BusinessListingStatus {
  PENDING
  UNDER_REVIEW
  APPROVED
  REJECTED
  COMPLETED
}

enum CategoryType {
  BUSINESS
  PRODUCT
}

model RegistrationInquiry {
   id              String               @id @default(cuid()) @map("_id")
   type            RegistrationType
   // Basic contact information
   name            String
   email           String
   phone           String?

   // Business specific fields
   businessName    String?
   businessDescription String?
   categoryId      String?
   gstNumber       String?
   website         String?

   // Professional specific fields
   firstName       String?
   lastName        String?
   profession      String?
   aboutMe         String?
   professionalHeadline String?

   // Common fields
   location        String?
   address         String?
   password        String? // Hashed password
   termsAccepted   Boolean              @default(false)
   termsAcceptedAt DateTime?

   // Admin review fields
   status          RegistrationStatus   @default(PENDING)
   adminNotes      String?
   reviewedBy      String?
   reviewedAt      DateTime?

   // Metadata
   createdAt       DateTime             @default(now())
   updatedAt       DateTime             @updatedAt

   // Indexes for performance
   @@index([status])
   @@index([type])
   @@index([createdAt])
   @@map("registration_inquiries")
}

enum RegistrationType {
  BUSINESS
  PROFESSIONAL
}

enum RegistrationStatus {
  PENDING
  UNDER_REVIEW
  APPROVED
  REJECTED
  COMPLETED
}

model Session {
   id        String   @id @default(cuid()) @map("_id")
   userId    String
   token     String   @unique
   expiresAt DateTime
   createdAt DateTime @default(now())

   // Indexes for performance
   @@index([userId])
   @@index([expiresAt])
   @@map("sessions")
}

model PasswordReset {
   id         String   @id @default(cuid()) @map("_id")
   userId     String
   token      String   @unique
   expiresAt  DateTime
   createdAt  DateTime @default(now())

   // Relations
   user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

   // Indexes for performance
   @@index([userId])
   @@index([expiresAt])
   @@map("password_resets")
}

model AuditLog {
   id          String      @id @default(cuid()) @map("_id")
   action      AuditAction
   entityType  String
   entityId    String
   userId      String
   userEmail   String?
   userName    String?
   oldData     Json?
   newData     Json?
   ipAddress   String?
   userAgent   String?
   metadata    Json?
   createdAt   DateTime    @default(now())

   @@index([entityType, entityId])
   @@index([userId])
   @@index([action])
   @@index([createdAt])
   @@map("audit_logs")
}

enum AuditAction {
  CREATE
  UPDATE
  DELETE
  VIEW
  LOGIN
  LOGOUT
  EXPORT
  IMPORT
  BULK_DELETE
  DUPLICATE
  STATUS_CHANGE
  PASSWORD_CHANGE
}
